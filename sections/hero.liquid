{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<style>
  .primary-cta {
    text-decoration: none !important;
  }
  
  .primary-cta:hover {
    text-decoration: none !important;
  }
</style>


        <div class="hero-section section" id="hero">
          <div class="hero-background">
            <!-- Base gradient layer -->
            <div class="hero-gradient"></div>
            
            <!-- Animated mesh gradient overlay -->
            <div class="hero-mesh-gradient"></div>
            
            <!-- Floating particles -->
            <div class="particles-container">
              <div class="particle particle-1"></div>
              <div class="particle particle-2"></div>
              <div class="particle particle-3"></div>
              <div class="particle particle-4"></div>
              <div class="particle particle-5"></div>
              <div class="particle particle-6"></div>
              <div class="particle particle-7"></div>
              <div class="particle particle-8"></div>
              <div class="particle particle-9"></div>
              <div class="particle particle-10"></div>
            </div>
            
            <!-- Floating Orbs -->
            <div class="orb orb-1"></div>
            <div class="orb orb-2"></div>
            <div class="orb orb-3"></div>
            <div class="orb orb-4"></div>
            <div class="orb orb-5"></div>
            <div class="orb orb-6"></div>
            <div class="orb orb-7"></div>
            <div class="orb orb-8"></div>
            
            <!-- Small Orbs for Balance -->
            <div class="small-orb small-orb-1"></div>
            <div class="small-orb small-orb-2"></div>
            <div class="small-orb small-orb-3"></div>
            <div class="small-orb small-orb-4"></div>
            <div class="small-orb small-orb-5"></div>
            
            <!-- Light streaks -->
            <div class="light-streak light-streak-1"></div>
            <div class="light-streak light-streak-2"></div>
            <div class="light-streak light-streak-3"></div>
            
            <!-- Depth layers -->
            <div class="depth-layer depth-layer-1"></div>
            <div class="depth-layer depth-layer-2"></div>
            <div class="depth-layer depth-layer-3"></div>
          </div>
  
  <div class="page-width">
    <div class="hero-content">
      <!-- Clean Typography Focus -->
      <div class="hero-text">
        <div class="product-badge">Featured Pack</div>
        
        <h1 class="hero-title">
          <span class="title-line-1">{{ section.settings.product_title_line_1 | default: "Liquify" }}</span>
          <span class="title-line-2">{{ section.settings.product_title_line_2 | default: "Vocals" }}</span>
        </h1>
        
        <div class="price-section">
          <span class="current-price">{{ section.settings.product_price | default: "$29.99" }}</span>
        </div>
        
        <p class="hero-description">
          <span class="description-highlight">{{ section.settings.description_highlight | default: "Punchy, Hypnotic and Floor-Filling" }}</span><br>
          <span class="description-subtitle">{{ section.settings.description_subtitle | default: "240 vocal samples crafted for the modern tech house movement." }}</span><br>
          
          {{ section.settings.description | default: "Dive into the fluid world of Liquify, a vocal sample pack designed for modern producers seeking lush, smooth, and expressive vocal textures. Loaded with professionally recorded phrases, one-shots, and melodic chops, this pack gives your tracks a vocal edge that glides effortlessly over any production." }}
        </p>
        
        <div class="cta-section">
          <a href="{{ section.settings.cta_url | default: '/products/liquify' }}" class="primary-cta">{{ section.settings.cta_text | default: "ADD TO CART" }} Â· {{ section.settings.product_price | default: "$29.99" }}</a>
        </div>
      </div>
      
      <!-- Subtle Product Preview -->
      <div class="product-preview">
        <div class="preview-container">
          <img 
            src="{% if section.settings.product_image %}{{ section.settings.product_image | image_url: width: 400 }}{% else %}https://cdn.shopify.com/s/files/1/0938/0285/6811/files/liquifyX.png?v=1758300196{% endif %}"
            alt="{{ section.settings.product_title_line_1 | default: 'Liquify' }} {{ section.settings.product_title_line_2 | default: 'Vocals' }}" 
            class="preview-image"
            loading="lazy"
            width="400"
            height="400"
          >
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "product_title_line_1",
      "label": "Product Title Line 1",
      "default": "Liquify"
    },
    {
      "type": "text",
      "id": "product_title_line_2",
      "label": "Product Title Line 2",
      "default": "Vocals"
    },
    {
      "type": "text",
      "id": "product_price",
      "label": "Product Price",
      "default": "$29.99"
    },
    {
      "type": "text",
      "id": "description_highlight",
      "label": "Description Highlight",
      "default": "Punchy, Hypnotic and Floor-Filling"
    },
    {
      "type": "text",
      "id": "description_subtitle",
      "label": "Description Subtitle",
      "default": "240 vocal samples crafted for the modern tech house movement."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Product Description",
      "default": "Dive into the fluid world of Liquify, a vocal sample pack designed for modern producers seeking lush, smooth, and expressive vocal textures. Loaded with professionally recorded phrases, one-shots, and melodic chops, this pack gives your tracks a vocal edge that glides effortlessly over any production."
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "ADD TO CART"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA Button URL"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
