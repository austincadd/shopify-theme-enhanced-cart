<style>
/* Page Background Animations - Override existing styles - Match featured-products */
html body {
  background: #000000 !important;
  position: relative !important;
  overflow-x: hidden !important;
}

/* Additional override to ensure background takes precedence */
body {
  background: #000000 !important;
  background-image: none !important;
}

/* Override any existing body background gradients */
body::before {
  display: none !important;
}

/* Force trusted-artists section background - Override all conflicting styles */
.trusted-artists-section.section {
  background: linear-gradient(135deg, #050505 0%, #0f0f1a 50%, #050505 100%) !important;
  background-color: transparent !important;
  background-image: linear-gradient(135deg, #050505 0%, #0f0f1a 50%, #050505 100%) !important;
  animation: colorShift 20s ease-in-out infinite !important;
}

/* Force section background animation */
#testimonials.trusted-artists-section {
  animation: colorShift 20s ease-in-out infinite !important;
}

/* Override any conflicting animations */
.trusted-artists-section {
  animation: colorShift 20s ease-in-out infinite !important;
}

/* Override any section-level background resets */
.shopify-section .trusted-artists-section {
  background: linear-gradient(135deg, #050505 0%, #0f0f1a 50%, #050505 100%) !important;
  background-color: transparent !important;
  background-image: linear-gradient(135deg, #050505 0%, #0f0f1a 50%, #050505 100%) !important;
}

/* Override the existing body::after with much higher specificity */
html body::after {
  content: '' !important;
  position: fixed !important;
  top: 0 !important;
  left: 0 !important;
  width: 100vw !important;
  height: 100vh !important;
  z-index: -1 !important;
  background: 
    radial-gradient(circle at 20% 50%, rgba(255, 59, 47, 0.4) 0%, transparent 60%),
    radial-gradient(circle at 80% 20%, rgba(255, 75, 71, 0.35) 0%, transparent 60%),
    radial-gradient(circle at 50% 80%, rgba(122, 60, 255, 0.3) 0%, transparent 60%),
    radial-gradient(circle at 30% 30%, rgba(14, 203, 230, 0.25) 0%, transparent 50%),
    linear-gradient(180deg, #0c0b1a 0%, #1a1330 100%) !important;
  animation: colorCycle 15s ease-in-out infinite !important;
  filter: blur(0.5px) saturate(1.2) !important;
  will-change: background !important;
}

@keyframes colorCycle {
  0%, 100% {
    background: 
      radial-gradient(circle at 20% 50%, rgba(255, 59, 47, 0.4) 0%, transparent 60%),
      radial-gradient(circle at 80% 20%, rgba(255, 75, 71, 0.35) 0%, transparent 60%),
      radial-gradient(circle at 50% 80%, rgba(122, 60, 255, 0.3) 0%, transparent 60%),
      radial-gradient(circle at 30% 30%, rgba(14, 203, 230, 0.25) 0%, transparent 50%),
      linear-gradient(180deg, #0c0b1a 0%, #1a1330 100%) !important;
  }
  25% {
    background: 
      radial-gradient(circle at 30% 40%, rgba(122, 60, 255, 0.4) 0%, transparent 60%),
      radial-gradient(circle at 70% 10%, rgba(14, 203, 230, 0.35) 0%, transparent 60%),
      radial-gradient(circle at 60% 90%, rgba(255, 59, 47, 0.3) 0%, transparent 60%),
      radial-gradient(circle at 40% 20%, rgba(255, 75, 71, 0.25) 0%, transparent 50%),
      linear-gradient(180deg, #0c0b1a 0%, #1a1330 100%) !important;
  }
  50% {
    background: 
      radial-gradient(circle at 40% 30%, rgba(14, 203, 230, 0.4) 0%, transparent 60%),
      radial-gradient(circle at 60% 80%, rgba(122, 60, 255, 0.35) 0%, transparent 60%),
      radial-gradient(circle at 70% 20%, rgba(255, 75, 71, 0.3) 0%, transparent 60%),
      radial-gradient(circle at 20% 70%, rgba(255, 59, 47, 0.25) 0%, transparent 50%),
      linear-gradient(180deg, #0c0b1a 0%, #1a1330 100%) !important;
  }
  75% {
    background: 
      radial-gradient(circle at 50% 20%, rgba(255, 75, 71, 0.4) 0%, transparent 60%),
      radial-gradient(circle at 20% 60%, rgba(14, 203, 230, 0.35) 0%, transparent 60%),
      radial-gradient(circle at 80% 40%, rgba(122, 60, 255, 0.3) 0%, transparent 60%),
      radial-gradient(circle at 60% 80%, rgba(255, 59, 47, 0.25) 0%, transparent 50%),
      linear-gradient(180deg, #0c0b1a 0%, #1a1330 100%) !important;
  }
}

/* Background Pulse Animation - Match featured-products */
@keyframes backgroundPulse {
  0%, 100% { opacity: 0.3; }
  50% { opacity: 0.6; }
}

/* Color Animation for Trusted Artists Section */
@keyframes colorShift {
  0% {
    background: linear-gradient(135deg, #050505 0%, #0f0f1a 50%, #050505 100%);
  }
  20% {
    background: linear-gradient(135deg, #2a0f05 0%, #4a1f0a 50%, #2a0f05 100%);
  }
  40% {
    background: linear-gradient(135deg, #1f0a05 0%, #3a1f0f 50%, #1f0a05 100%);
  }
  60% {
    background: linear-gradient(135deg, #2a050a 0%, #4a1f0f 50%, #2a050a 100%);
  }
  80% {
    background: linear-gradient(135deg, #0a0505 0%, #1a0f0a 50%, #0a0505 100%);
  }
  100% {
    background: linear-gradient(135deg, #050505 0%, #0f0f1a 50%, #050505 100%);
  }
}


/* Floating color orbs animation */
@keyframes floatingOrbs {
  0%, 100% {
    transform: translateY(0px) translateX(0px) scale(1);
    opacity: 0.1;
  }
  25% {
    transform: translateY(-20px) translateX(10px) scale(1.1);
    opacity: 0.2;
  }
  50% {
    transform: translateY(-10px) translateX(-15px) scale(0.9);
    opacity: 0.15;
  }
  75% {
    transform: translateY(-30px) translateX(5px) scale(1.05);
