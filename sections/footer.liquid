{% comment %}
  Footer section for the theme
{% endcomment %}

<style>
  .footer {
    background: rgba(7, 7, 18, 0.95);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 4rem 0 2rem;
    margin-top: 4rem;
  }

  .footer-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr 2fr;
      gap: 2.5rem;
    }
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-logo {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    text-decoration: none;
    font-family: 'Space Grotesk', sans-serif;
    letter-spacing: 1px;
  }

  .footer-logo-img {
    height: 60px;
    width: auto;
    max-width: 200px;
    object-fit: contain;
    filter: brightness(1.2);
  }

  .footer-description {
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.6;
    max-width: 300px;
  }

  .footer-social {
    display: flex;
    gap: 1rem;
    margin-top: 0.75rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.05);
    border: none;
    border-radius: 8px;
    color: var(--text-secondary);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: rgba(74, 158, 255, 0.1);
    color: var(--accent-blue);
    transform: translateY(-2px);
  }

    .footer-nav {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 0.25rem;
    }

  .footer-nav-column h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
    font-family: 'Space Grotesk', sans-serif;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .footer-nav-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-nav-column li {
    margin-bottom: 0.5rem;
  }

  .footer-nav-column a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .footer-nav-column a:hover {
    color: var(--accent-blue);
  }

  .footer-nav-column a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--accent-blue);
    transition: width 0.3s ease;
  }

  .footer-nav-column a:hover::after {
    width: 100%;
  }

  .footer-bottom {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
  }

  .footer-copyright {
    color: var(--text-secondary);
    font-size: 0.85rem;
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 3rem 0 2rem;
    }
    
    .footer-container {
      padding: 0 1rem;
    }
    
    .footer-content {
      gap: 2rem;
    }
    
    .footer-nav {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .footer-social {
      justify-content: center;
    }
  }
</style>

