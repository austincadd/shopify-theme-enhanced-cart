{% comment %}
  Stay in the Lab Section - Exclusive Content & Early Access
{% endcomment %}

<div class="stay-in-lab-section section" id="newsletter">
  <div class="page-width">
    <div class="lab-content tech-panel" style="padding: 1rem 3rem; border-radius: 12px; text-align: center; position: relative; overflow: hidden;">
      <div class="lab-header" style="margin-bottom: 2rem;">
        <div class="lab-icon" style="font-size: 3rem; color: var(--accent-blue); margin-bottom: 1rem;">‚ö°</div>
        <h2 class="lab-heading" style="color: var(--text-primary); font-size: 2.5rem; font-weight: 700; margin-bottom: 1rem; line-height: 1.2; font-family: 'Space Grotesk', sans-serif;">
          {{ section.settings.heading | default: "Stay in the Lab" }}
        </h2>
        <p class="lab-subtext" style="color: var(--text-secondary); font-size: 1.1rem; line-height: 1.6; max-width: 600px; margin: 0 auto 2rem;">
          {{ section.settings.subtext | default: "Exclusive sounds, presets, and early access to plugins ‚Äî free for our members." }}
        </p>
      </div>
      
      <div class="lab-benefits" style="margin-bottom: 2rem;">
        <span class="benefit-text" style="color: var(--text-secondary); font-size: 1rem; font-family: 'Space Grotesk', sans-serif;">üéÅ Free sounds ‚Ä¢ ‚ö° Early access ‚Ä¢ üî• Beta plugins</span>
      </div>
      
      <div class="lab-form-container">
        <form class="lab-form" action="#" method="post" id="lab-form" onsubmit="submitLabForm(event)" style="max-width: 500px; margin: 0 auto;">
          <div class="form-group" style="display: flex; gap: 1rem; margin-bottom: 1rem;">
            <input 
              type="email" 
              name="email" 
              placeholder="Enter your email address" 
              class="lab-email-input"
              required
              style="flex: 1; padding: 1rem; background: var(--cyber-panel); border: 1px solid var(--panel-border); border-radius: 8px; color: var(--text-primary); font-size: 1rem; font-family: 'Space Grotesk', sans-serif; outline: none; transition: all 0.3s ease;"
            >
            <button type="submit" class="lab-join-btn" style="background: var(--accent-blue); color: var(--cyber-bg); padding: 1rem 2rem; border: none; border-radius: 8px; font-size: 1rem; font-weight: 600; cursor: pointer; transition: all 0.3s ease; font-family: 'Space Grotesk', sans-serif; white-space: nowrap;">
              <span class="btn-text">{{ section.settings.button_text | default: "Unlock Free Sounds" }}</span>
            </button>
          </div>
          <p class="lab-disclaimer" style="color: var(--text-secondary); font-size: 0.9rem; font-family: 'Space Grotesk', sans-serif;">
            {{ section.settings.disclaimer | default: "Instant access to free sounds. No spam, unsubscribe anytime." }}
          </p>
        </form>
        
        <!-- Success Message -->
        <div id="lab-success" class="lab-success" style="display: none; flex-direction: column; align-items: center; gap: 1rem;">
          <div class="success-icon" style="font-size: 3rem; color: var(--neon-green);">‚úì</div>
          <div class="success-text" style="text-align: center;">
            <h3 style="color: var(--text-primary); font-size: 1.5rem; font-weight: 600; margin-bottom: 0.5rem; font-family: 'Space Grotesk', sans-serif;">Welcome to the Lab!</h3>
            <p style="color: var(--text-secondary); font-size: 1rem; font-family: 'Space Grotesk', sans-serif;">Check your email for instant access to your free sounds.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.lab-email-input:focus {
  border-color: var(--accent-blue);
  box-shadow: 0 0 0 2px rgba(74, 158, 255, 0.2);
}

.lab-join-btn:hover {
  background: var(--neon-green) !important;
  transform: translateY(-1px);
}

.lab-join-btn:active {
  transform: translateY(0);
}
</style>

<script>
function submitLabForm(event) {
  event.preventDefault();
  
  const form = document.getElementById('lab-form');
  const successMessage = document.getElementById('lab-success');
  const joinBtn = form.querySelector('.lab-join-btn');
  
  // Add loading state
  joinBtn.classList.add('loading');
  
  // Simulate form submission (replace with actual form handling)
  setTimeout(() => {
    form.style.display = 'none';
    successMessage.style.display = 'flex';
    
    // Scroll to contact section after showing success
    setTimeout(() => {
      const contactSection = document.getElementById('contact-section');
      if (contactSection) {
        contactSection.scrollIntoView({ 
          behavior: 'smooth',
          block: 'start'
        });
      }
    }, 1000);
    
    // Reset form after 5 seconds
    setTimeout(() => {
      form.style.display = 'block';
      successMessage.style.display = 'none';
      form.reset();
      joinBtn.classList.remove('loading');
    }, 5000);
  }, 2000);
}
</script>

{% schema %}
{
  "name": "Stay in the Lab",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Stay in the Lab"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Exclusive sounds, presets, and early access to plugins ‚Äî free for our members."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Unlock Free Sounds"
    },
    {
      "type": "text",
      "id": "form_action",
      "label": "Form Action URL",
      "default": "/contact#contact_form"
    },
    {
      "type": "text",
      "id": "disclaimer",
      "label": "Disclaimer",
      "default": "Instant access to free sounds. No spam, unsubscribe anytime."
    }
  ],
  "presets": [
    {
      "name": "Stay in the Lab"
    }
  ]
}
{% endschema %}
