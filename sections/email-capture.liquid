{
  "name": "Stay in the Lab",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Stay in the Lab"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Exclusive sounds, presets, and early access to plugins ‚Äî free for our members."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Unlock Free Sounds"
    },
    {
      "type": "text",
      "id": "form_action",
      "label": "Form Action URL",
      "default": "/contact#contact_form"
    },
    {
      "type": "text",
      "id": "disclaimer",
      "label": "Disclaimer",
      "default": "Instant access to free sounds. No spam, unsubscribe anytime."
    }
  ],
  "presets": [
    {
      "name": "Stay in the Lab"
    }
  ]
}
{% endschema %}
