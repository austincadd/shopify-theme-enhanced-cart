{% comment %}
  Hero section with featured products showcase
  Usage: {% render 'hero-featured' %}
{% endcomment %}

{{ 'section-hero-featured.css' | asset_url | stylesheet_tag }}

<div class="hero-featured-section">
  <!-- Hero Content -->
  <div class="hero-content">
    <div class="hero-text">
      <h1 class="hero-title reveal">
        {{ section.settings.heading | default: 'Sounds That Shape the Future' }}
      </h1>
      <p class="hero-subtitle reveal">
        {{ section.settings.subheading | default: 'Premium sample packs and cutting-edge plugins crafted by industry professionals for the next generation of producers.' }}
      </p>
      
      <div class="hero-cta reveal">
        <a href="{{ section.settings.cta_url | default: '/collections/sample-packs' }}" 
           class="button button--primary buy-button">
          {{ section.settings.cta_text | default: 'Explore Packs' }}
        </a>
        
        {% if section.settings.secondary_cta_text != blank %}
          <a href="{{ section.settings.secondary_cta_url | default: '/collections/plugins' }}" 
             class="button button--secondary">
            {{ section.settings.secondary_cta_text | default: 'Discover Plugins' }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Featured Products Showcase -->
  <div class="featured-showcase">
    <div class="showcase-header">
      <h2 class="showcase-title reveal">{{ section.settings.showcase_heading | default: 'Featured Packs' }}</h2>
      <p class="showcase-subtitle reveal">{{ section.settings.showcase_subtitle | default: 'Handpicked sounds from our studio' }}</p>
    </div>

    <div class="featured-products-grid">
      <!-- Euphoria Pack -->
      <div class="featured-product-card reveal">
        <div class="product-image">
          {% if section.settings.euphoria_image != blank %}
            <img src="{{ section.settings.euphoria_image | image_url: width: 400 }}" 
                 alt="{{ section.settings.euphoria_title | default: 'Euphoria Pack' }}"
                 loading="lazy">
          {% else %}
            <div class="product-placeholder">
              <span class="placeholder-icon">ðŸŽµ</span>
            </div>
          {% endif %}
          <div class="product-overlay">
            <button class="play-demo-btn" data-product="euphoria">
              <span class="play-icon">â–¶</span>
              <span class="play-text">Play Demo</span>
            </button>
          </div>
        </div>
        
        <div class="product-info">
          <h3 class="product-title">{{ section.settings.euphoria_title | default: 'Euphoria Pack' }}</h3>
          <p class="product-description">{{ section.settings.euphoria_description | default: 'Melodic and uplifting sounds for your next hit' }}</p>
          <div class="product-price">
            <span class="price">{{ section.settings.euphoria_price | default: '$29.99' }}</span>
            <span class="price-original">{{ section.settings.euphoria_price_original | default: '$49.99' }}</span>
          </div>
          <a href="{{ section.settings.euphoria_url | default: '/products/euphoria-pack' }}" 
             class="button button--primary product-btn">
            Get Pack
          </a>
        </div>
      </div>

      <!-- Paradox Pack -->
      <div class="featured-product-card reveal">
        <div class="product-image">
          {% if section.settings.paradox_image != blank %}
            <img src="{{ section.settings.paradox_image | image_url: width: 400 }}" 
                 alt="{{ section.settings.paradox_title | default: 'Paradox Pack' }}"
                 loading="lazy">
          {% else %}
            <div class="product-placeholder">
              <span class="placeholder-icon">ðŸŽµ</span>
            </div>
          {% endif %}
          <div class="product-overlay">
            <button class="play-demo-btn" data-product="paradox">
              <span class="play-icon">â–¶</span>
              <span class="play-text">Play Demo</span>
            </button>
          </div>
        </div>
        
        <div class="product-info">
          <h3 class="product-title">{{ section.settings.paradox_title | default: 'Paradox Pack' }}</h3>
          <p class="product-description">{{ section.settings.paradox_description | default: 'Dark and experimental sounds for the avant-garde' }}</p>
          <div class="product-price">
            <span class="price">{{ section.settings.paradox_price | default: '$29.99' }}</span>
            <span class="price-original">{{ section.settings.paradox_price_original | default: '$49.99' }}</span>
          </div>
          <a href="{{ section.settings.paradox_url | default: '/products/paradox-pack' }}" 
             class="button button--primary product-btn">
            Get Pack
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Play demo functionality
  const playButtons = document.querySelectorAll('.play-demo-btn');
  
  playButtons.forEach(button => {
    button.addEventListener('click', function() {
      const product = this.getAttribute('data-product');
      // Add your audio demo functionality here
      console.log('Playing demo for:', product);
      
      // Add visual feedback
      this.classList.add('playing');
      setTimeout(() => {
        this.classList.remove('playing');
      }, 2000);
    });
  });
});
</script>

