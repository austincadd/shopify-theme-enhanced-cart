{{ 'section-system-requirements.css' | asset_url | stylesheet_tag }}

<div class="system-requirements-section">
  <div class="page-width">
    <h2 class="requirements-heading reveal">{{ section.settings.heading | default: 'System Requirements' }}</h2>
    
    <div class="requirements-grid">
      <div class="requirement-category product-card">
        <div class="category-header">
          <h3>Operating System</h3>
          <svg class="category-icon" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
          </svg>
        </div>
        <div class="requirement-list">
          <div class="requirement-item">
            <span class="requirement-label">Windows:</span>
            <span class="requirement-value">10 or later (64-bit)</span>
          </div>
          <div class="requirement-item">
            <span class="requirement-label">macOS:</span>
            <span class="requirement-value">10.15 or later</span>
          </div>
          <div class="requirement-item">
            <span class="requirement-label">Linux:</span>
            <span class="requirement-value">Ubuntu 18.04+ or equivalent</span>
          </div>
        </div>
      </div>
      
      <div class="requirement-category product-card">
        <div class="category-header">
          <h3>DAW Compatibility</h3>
          <svg class="category-icon" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
        </div>
        <div class="requirement-list">
          <div class="requirement-item">
            <span class="requirement-label">VST3:</span>
            <span class="requirement-value">Fully supported</span>
          </div>
          <div class="requirement-item">
            <span class="requirement-label">AU:</span>
            <span class="requirement-value">macOS only</span>
          </div>
          <div class="requirement-item">
            <span class="requirement-label">AAX:</span>
            <span class="requirement-value">Pro Tools 12+</span>
          </div>
        </div>
      </div>
      
      <div class="requirement-category product-card">
        <div class="category-header">
          <h3>Hardware</h3>
          <svg class="category-icon" viewBox="0 0 24 24" fill="currentColor">
            <path d="M4 6H2v14c0 1.1.9 2 2 2h14v-2H4V6zm16-4H8c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm-1 9H9V9h10v2zm-4 4H9v-2h6v2zm4-8H9V5h10v2z"/>
          </svg>
        </div>
        <div class="requirement-list">
          <div class="requirement-item">
            <span class="requirement-label">RAM:</span>
            <span class="requirement-value">8GB minimum, 16GB recommended</span>
          </div>
          <div class="requirement-item">
            <span class="requirement-label">CPU:</span>
            <span class="requirement-value">Intel i5 or AMD Ryzen 5</span>
          </div>
          <div class="requirement-item">
            <span class="requirement-label">Storage:</span>
            <span class="requirement-value">2GB free space</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "System Requirements",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "System Requirements"
    }
  ],
  "presets": [
    {
      "name": "System Requirements"
    }
  ]
}
{% endschema %}
