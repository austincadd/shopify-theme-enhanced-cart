{% comment %}
  Footer Contact Section - Mini contact form above footer
{% endcomment %}

<div id="contact" class="footer-contact-section section" style="background: linear-gradient(135deg, #050505 0%, #0f0f1a 50%, #050505 100%); {% if template contains 'product' %}padding: 0; margin: 0;{% else %}padding: 1rem 0;{% endif %} position: relative; overflow: hidden; z-index: 2; animation: colorShift 20s ease-in-out infinite;">
  <!-- Animated Background Elements - Match email-capture styling exactly -->
  <div class="contact-bg" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background-image: radial-gradient(circle at 20% 80%, rgba(102, 255, 204, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255, 45, 149, 0.1) 0%, transparent 50%); animation: backgroundPulse 8s ease-in-out infinite; z-index: 1;"></div>
  
  <!-- Floating Color Orbs -->
  <div class="floating-orb orb-1" style="position: absolute; top: 10%; left: 10%; width: 100px; height: 100px; background: radial-gradient(circle, rgba(255, 87, 34, 0.6) 0%, transparent 70%); border-radius: 50%; animation: floatingOrbs 12s ease-in-out infinite; z-index: 1;"></div>
  <div class="floating-orb orb-2" style="position: absolute; top: 60%; right: 15%; width: 80px; height: 80px; background: radial-gradient(circle, rgba(255, 140, 0, 0.6) 0%, transparent 70%); border-radius: 50%; animation: floatingOrbs 15s ease-in-out infinite reverse; z-index: 1;"></div>
  <div class="floating-orb orb-3" style="position: absolute; bottom: 20%; left: 20%; width: 60px; height: 60px; background: radial-gradient(circle, rgba(255, 69, 0, 0.6) 0%, transparent 70%); border-radius: 50%; animation: floatingOrbs 18s ease-in-out infinite; z-index: 1;"></div>
  <div class="floating-orb orb-4" style="position: absolute; top: 30%; right: 30%; width: 120px; height: 120px; background: radial-gradient(circle, rgba(255, 99, 71, 0.5) 0%, transparent 70%); border-radius: 50%; animation: floatingOrbs 20s ease-in-out infinite reverse; z-index: 1;"></div>
  <div class="floating-orb orb-5" style="position: absolute; top: 70%; left: 50%; width: 90px; height: 90px; background: radial-gradient(circle, rgba(255, 165, 0, 0.5) 0%, transparent 70%); border-radius: 50%; animation: floatingOrbs 16s ease-in-out infinite; z-index: 1;"></div>
  
  <div class="page-width">
    <div class="footer-contact-content tech-panel" style="padding: 3rem; border-radius: 20px; text-align: center; position: relative; overflow: hidden; background: linear-gradient(135deg, rgba(12, 11, 26, 0.9), rgba(26, 19, 48, 0.9)); {% unless template contains 'product' %}border: 1px solid #7a3cff; box-shadow: 0 1px 4px rgba(122, 60, 255, 0.05);{% else %}border: none !important; box-shadow: none !important; outline: none !important;{% endunless %} z-index: 2;">
      <div class="contact-text" style="margin-bottom: 2rem;">
        <h3 class="contact-headline" style="color: #ffffff; font-size: 2.5rem; font-weight: 700; margin-bottom: 1rem; line-height: 1.2; font-family: 'Space Grotesk', sans-serif; text-shadow: 0 0 8px rgba(122, 60, 255, 0.2);">
          {{ section.settings.headline | default: "Let's build something together." }}
        </h3>
        <p class="contact-subtext" style="color: rgba(255, 255, 255, 0.8); font-size: 1.1rem; line-height: 1.6; max-width: 600px; margin: 0 auto; text-shadow: 0 0 5px rgba(14, 203, 230, 0.1);">
          {{ section.settings.subtext | default: "Questions about our packs or plugins?" }}
        </p>
      </div>
      
      <div class="contact-form-container" style="max-width: 600px; margin: 0 auto; border: none; background: none; box-shadow: none;">
        {% form 'contact', id: 'footer-contact-form', class: 'footer-contact-form' %}
          {% if form.posted_successfully? %}
            <div class="footer-success" style="display: flex; flex-direction: column; align-items: center; gap: 1rem;">
              <div class="success-check" style="font-size: 3rem; color: #0ecbe6; text-shadow: 0 0 10px rgba(14, 203, 230, 0.3);">âœ“</div>
              <div class="success-text" style="text-align: center;">
                <h3 style="color: #ffffff; font-size: 1.5rem; font-weight: 600; margin-bottom: 0.5rem; font-family: 'Space Grotesk', sans-serif; text-shadow: 0 0 5px rgba(14, 203, 230, 0.2);">Message Sent!</h3>
                <p style="color: rgba(255, 255, 255, 0.8); font-size: 1rem; font-family: 'Space Grotesk', sans-serif;">We'll get back to you soon.</p>
              </div>
            </div>
          {% else %}
          <div class="form-group" style="display: flex; gap: 1rem; margin-bottom: 1rem;">
            <input 
              type="email" 
              id="footer-email" 
              name="contact[email]" 
              placeholder="Your email" 
              required
              class="email-input"
              value="{{ form.email }}"
              style="flex: 1; padding: 1rem; background: rgba(255, 255, 255, 0.05); border: 2px solid rgba(122, 60, 255, 0.3); border-radius: 12px; color: #ffffff; font-size: 1rem; font-family: 'Space Grotesk', sans-serif; outline: none; transition: all 0.3s ease; box-shadow: 0 1px 4px rgba(122, 60, 255, 0.1);"
            >
            <textarea 
              id="footer-message" 
              name="contact[body]" 
              placeholder="Your message" 
              rows="1" 
              required
              class="message-input"
              style="flex: 2; padding: 1rem; background: rgba(255, 255, 255, 0.05); border: 2px solid rgba(122, 60, 255, 0.3); border-radius: 12px; color: #ffffff; font-size: 1rem; font-family: 'Space Grotesk', sans-serif; outline: none; transition: all 0.3s ease; resize: none; box-shadow: 0 1px 4px rgba(122, 60, 255, 0.1);"
            >{{ form.body }}</textarea>
            <button type="submit" class="send-btn primary-cta" style="background: linear-gradient(135deg, #ff3b2f, #ff7f32, #ff2566, #7a3cff, #0ecbe6) !important; color: #ffffff !important; border: none !important; border-radius: 12px !important; padding: 1rem 1.25rem !important; font-size: 0.85rem !important; font-weight: 600 !important; cursor: pointer !important; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif !important; transition: all 0.3s ease !important; position: relative !important; overflow: hidden !important; box-shadow: 0 2px 8px rgba(122, 60, 255, 0.2) !important; white-space: nowrap; height: auto; align-self: stretch;">
              <span class="btn-text">Send</span>
            </button>
          </div>
          
          {% if form.errors %}
            <div class="form-errors" style="margin-top: 0.5rem; padding: 0.5rem; background: rgba(255, 0, 0, 0.1); border: 1px solid rgba(255, 0, 0, 0.3); border-radius: 6px; color: #ff6b6b; font-size: 0.8rem; font-family: 'Space Grotesk', sans-serif;">
              {% for field in form.errors %}
                <p>{{ field }}: {{ form.errors[field] }}</p>
              {% endfor %}
            </div>
          {% endif %}
          {% endif %}
        {% endform %}
      </div>
    </div>
  </div>
</div>

<style>
/* Background Animations - Match email-capture exactly */
@keyframes colorShift {
  0%, 100% { 
    background: linear-gradient(135deg, #050505 0%, #0f0f1a 50%, #050505 100%); 
  }
  25% { 
    background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #0a0a0a 100%); 
  }
  50% { 
    background: linear-gradient(135deg, #0f0f1a 0%, #1a1330 50%, #0f0f1a 100%); 
  }
  75% { 
    background: linear-gradient(135deg, #1a1a2e 0%, #0a0a0a 50%, #1a1a2e 100%); 
  }
}

@keyframes backgroundPulse {
  0%, 100% { 
    opacity: 0.3; 
    transform: scale(1); 
  }
  50% { 
    opacity: 0.6; 
    transform: scale(1.05); 
  }
}

@keyframes floatingOrbs {
  0%, 100% { 
    transform: translateY(0px) translateX(0px) rotate(0deg); 
    opacity: 0.6; 
  }
  25% { 
    transform: translateY(-20px) translateX(10px) rotate(90deg); 
    opacity: 0.8; 
  }
  50% { 
    transform: translateY(-10px) translateX(-15px) rotate(180deg); 
    opacity: 0.4; 
  }
  75% { 
    transform: translateY(-30px) translateX(5px) rotate(270deg); 
    opacity: 0.7; 
  }
}

/* Form Input Focus Effects */
.email-input:focus,
.message-input:focus {
  border-color: #7a3cff;
  box-shadow: 0 0 0 2px rgba(122, 60, 255, 0.3), 0 0 15px rgba(122, 60, 255, 0.2);
}

/* Button Hover Effects */
.send-btn:hover {
  transform: translateY(-2px) !important;
  box-shadow: 0 8px 25px rgba(122, 60, 255, 0.5), 0 0 20px rgba(255, 59, 47, 0.4) !important;
  background: linear-gradient(135deg, #ff4b47, #ff9955, #d62478, #9e4bff, #3fd7ff) !important;
}

.send-btn:active {
  transform: translateY(0) !important;
}

/* Responsive Design */
@media screen and (max-width: 768px) {
  .form-group {
    flex-direction: column;
    gap: 1rem;
  }
  
  .email-input,
  .message-input,
  .send-btn {
    flex: none;
    width: 100%;
  }
  
  .contact-headline {
    font-size: 2rem !important;
  }
  
  .contact-subtext {
    font-size: 1rem !important;
  }
}
</style>

<script>
// Auto-resize textarea
document.addEventListener('DOMContentLoaded', function() {
  const textarea = document.getElementById('footer-message');
  if (textarea) {
    textarea.addEventListener('input', function() {
      this.style.height = '32px'; // Reset to base height
      this.style.height = Math.min(this.scrollHeight, 60) + 'px';
    });
  }
});
</script>

{% schema %}
{
  "name": "Footer Contact",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Let's build something together."
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Questions about our packs or plugins?"
    }
  ],
  "presets": [
    {
      "name": "Footer Contact"
    }
  ]
}
{% endschema %}
