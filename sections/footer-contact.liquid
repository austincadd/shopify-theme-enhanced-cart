  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Let's build something together."
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Questions about our packs or plugins?"
    }
  ],
  "presets": [
    {
      "name": "Footer Contact"
    }
  ]
}
{% endschema %}
