  /* Ensure the block container is visible */
  .product-form__buttons + .shopify-app-block[data-block-type="shopify://apps/mvn-waveviz/blocks/waveviz"],
  .product__description + .shopify-app-block[data-block-type="shopify://apps/mvn-waveviz/blocks/waveviz"] {
