<div class="product-page">
  <!-- Hero Section -->
  <section class="hero-section">
      <!-- Left: Product Image -->
      <div class="product-image-container">
        {% if product.featured_image %}
          <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title | escape }}" class="product-image" />
      {% else %}
        <div class="product-image" style="background: #374151; height: 400px; display: flex; align-items: center; justify-content: center; color: #9ca3af;">
          No Image
                </div>
                        {% endif %}
                          </div>
    
    <!-- Right: Product Info -->
    <div class="product-info">
        <nav class="breadcrumb-nav">
          <a href="/" class="breadcrumb-link">Home</a>
          <span class="breadcrumb-separator">/</span>
          <a href="/#shop" class="breadcrumb-link">Sample Packs</a>
          <span class="breadcrumb-separator">/</span>
          <span class="breadcrumb-current">{{ product.title | escape }}</span>
        </nav>
      
      <h1 class="product-title">{{ product.title | escape }}</h1>
      
      <div class="pro-crafted">
        <span class="pro-crafted-text">Pro Crafted</span>
                          </div>
      
      <div class="product-price">
        {%- render 'price', product: product, price_class: 'price--large' -%}
                  </div>
      
      <form action="/cart/add" method="post" enctype="multipart/form-data" id="product-form">
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" />
        <button type="button" class="add-to-cart-btn" onclick="addToCartAndOpenDrawer(document.getElementById('product-form'), {{ product.selected_or_first_available_variant.id }})">
          Add to Cart
                            </button>
      </form>
      
      {% if product.description != blank %}
        <p class="product-description">{{ product.description }}</p>
                        {% endif %}
      
        <!-- Render WaveViz blocks -->
        {% for block in section.blocks %}
          {% case block.type %}
            {% when '@app' %}
              {% if block.id contains 'mvn_waveviz' %}
                <!-- MVN WaveViz App Block -->
                <div class="waveviz-block">
                  <div class="shopify-app-block" data-block-type="{{ block.type }}" data-block-id="{{ block.id }}">
                    {% render block %}
                    </div>
                  </div>
                      {% endif %}
          {% endcase %}
        {% endfor %}

        <!-- Features and MVN Container -->
        <div class="features-mvn-container">
          <!-- Features Dropdown -->
          <div class="features-dropdown">
            <div class="features-header" onclick="toggleFeatures()">
              <h2 class="features-title">What Does the Pack Include?</h2>
              <span class="features-toggle" id="featuresToggle">▼</span>
                        </div>
            <div class="features-content" id="featuresContent">
              <ul class="features-list">
                <li>100+ Vocal Phrases</li>
                <li>Vocal Chops for instant groove</li>
                <li>Shouts & one-shots for drops</li>
                <li>Syllables for layering and FX</li>
                <li>High-quality WAV files</li>
                <li>Ready-to-use in any DAW</li>
                                </ul>
                              </div>
                          </div>

          <!-- Middle Separator Line -->
          <div class="middle-separator"></div>

          <!-- System Requirements Dropdown -->
          <div class="features-dropdown">
            <div class="features-header" onclick="toggleSystemRequirements()">
              <h2 class="features-title">System Requirements</h2>
              <span class="features-toggle" id="systemRequirementsToggle">▼</span>
                                  </div>
            <div class="features-content" id="systemRequirementsContent">
              <ul class="features-list">
                <li>Serum 2 (Latest Update)</li>
                <li>Ableton Live 12</li>
              </ul>
                              </div>
                            </div>
                      </div>
      </div>
        </section>


<script type="application/ld+json">
  {{ product | structured_data }}
      </script>

<script>
  function toggleFeatures() {
    const content = document.getElementById('featuresContent');
    const toggle = document.getElementById('featuresToggle');
    
    if (content.classList.contains('open')) {
      content.classList.remove('open');
      toggle.classList.remove('open');
    } else {
      content.classList.add('open');
      toggle.classList.add('open');
    }
  }

  function toggleSystemRequirements() {
    const content = document.getElementById('systemRequirementsContent');
    const toggle = document.getElementById('systemRequirementsToggle');
    
    if (content.classList.contains('open')) {
      content.classList.remove('open');
      toggle.classList.remove('open');
    } else {
      content.classList.add('open');
      toggle.classList.add('open');
    }
  }
    </script>
