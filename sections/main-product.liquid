<product-info
  id="MainProduct-{{ section.id }}"
  class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}"
  data-section="{{ section.id }}"
  data-product-id="{{ product.id }}"
  data-update-url="true"
  data-url="{{ product.url }}"
  {% if section.settings.image_zoom == 'hover' %}
    data-zoom-on-hover
  {% endif %}
>
  {{ 'section-main-product.css' | asset_url | stylesheet_tag }}
  {{ 'component-accordion.css' | asset_url | stylesheet_tag }}
  {{ 'component-price.css' | asset_url | stylesheet_tag }}
  {{ 'component-slider.css' | asset_url | stylesheet_tag }}
  {{ 'component-rating.css' | asset_url | stylesheet_tag }}
  {{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}

  {% unless product.has_only_default_variant %}
    {{ 'component-product-variant-picker.css' | asset_url | stylesheet_tag }}
    {{ 'component-swatch-input.css' | asset_url | stylesheet_tag }}
    {{ 'component-swatch.css' | asset_url | stylesheet_tag }}
  {% endunless %}
  {%- if product.quantity_price_breaks_configured? -%}
    {{ 'component-volume-pricing.css' | asset_url | stylesheet_tag }}
  {%- endif -%}

  {%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

  /* Product Page Styles */
  .product-page {
    background: #0a0a0a;
    color: white;
    font-family: 'Inter', sans-serif;
    padding: 4rem 4rem 6rem 4rem;
  }

  /* Hero Section */
  .hero-section {
    max-width: 1400px;
    margin: 0 auto;
    padding: 3rem 5.5rem;
    display: grid;
    grid-template-columns: 1.3fr 1.7fr;
    gap: 5rem;
    align-items: start;
    margin-top: 0;
  }

  @media (max-width: 768px) {
    .hero-section {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 2rem 3.5rem;
    }
    
    .features-section {
      justify-content: center;
      padding: 2rem 3.5rem;
    }
    
    .features-dropdown {
      max-width: 100%;
    }
    
  }

  .product-image {
      border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    width: 100%;
    height: auto;
  }

  .product-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .breadcrumb-nav {
    display: flex;
    align-items: center;
    gap: 0.5rem;
      margin-bottom: 0.5rem;
  }

  .breadcrumb-link {
    color: #9ca3af;
    text-decoration: none;
    font-size: 1.1rem;
    transition: color 0.3s ease;
  }

  .breadcrumb-link:hover {
    color: #fbbf24;
  }

  .breadcrumb-separator {
    color: #6b7280;
    font-size: 1.1rem;
  }

  .breadcrumb-current {
    color: #d1d5db;
    font-size: 1.1rem;
    font-weight: 500;
  }

  .product-title {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.1;
  }

  .pro-crafted {
    margin-bottom: 0.5rem;
  }

  .pro-crafted-text {
    background: linear-gradient(135deg, #fbbf24, #f59e0b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
      font-size: 0.9rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

  .product-price {
    font-size: 1.5rem;
    color: #fbbf24 !important;
    font-weight: 600;
  }
  
  .product-price * {
    color: #fbbf24 !important;
  }
  
  .product-price .price__regular .visually-hidden {
    display: none;
  }
  
  .product-price .price__regular .price-item--regular {
    display: inline;
  }

  .add-to-cart-btn {
    background: #fbbf24;
    color: #000;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
      font-weight: 600;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
    width: fit-content;
  }

  .add-to-cart-btn:hover {
    background: #f59e0b;
  }

  .product-description {
    color: #d1d5db;
      line-height: 1.6;
  }


  .features-dropdown {
    background: #1f2937;
      border-radius: 6px;
    border: 1px solid #374151;
    overflow: hidden;
    max-width: 400px;
    width: 100%;
    margin-top: 1.5rem;
  }

  .features-header {
    padding: 0.5rem 0.75rem;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background-color 0.3s ease;
  }

  .features-header:hover {
    background: #374151;
  }

  .features-title {
    font-size: 2rem !important;
    font-weight: 600 !important;
    margin: 0 !important;
    line-height: 1 !important;
  }

  .features-toggle {
    font-size: 0.75rem;
    color: #fbbf24;
    transition: transform 0.3s ease;
  }

  .features-toggle.open {
    transform: rotate(180deg);
  }

  .features-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .features-content.open {
    max-height: 300px;
  }

  .features-list {
    list-style: disc;
    list-style-position: inside;
    color: #d1d5db;
    line-height: 1.4;
    padding: 0 0.75rem 0.5rem 0.75rem;
    margin: 0;
    font-size: 0.8rem;
  }

  .features-list li {
    margin-bottom: 0.25rem;
  }




  /* MVN Waveviz Section Styling */
  .shopify-app-block[data-block-type="shopify://apps/mvn-waveviz/blocks/waveviz"] {
    background: linear-gradient(135deg, #0c0b1a 0%, #1a1330 100%);
    border-radius: 12px;
    padding: 0 1.5rem;
    margin: 1rem 0 2rem 0;
    position: relative;
    overflow: hidden;
    order: 1;
    max-width: 600px;
      width: 100%;
  }

  /* Visual Grouping - Side by Side Layout */
  .product-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .features-mvn-container {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    margin-top: 1.5rem;
  }

  .features-dropdown {
    flex: 1;
    order: 0;
  }

  .shopify-app-block[data-block-type="shopify://apps/mvn-waveviz/blocks/waveviz"] {
    flex: 1;
    order: 1;
    margin: 0;
  }

  /* MVN section positioning */
  .shopify-app-block[data-block-type="shopify://apps/mvn-waveviz/blocks/waveviz"] {
    margin-bottom: 2rem;
  }


  /* Responsive - Stack on mobile */
  @media (max-width: 768px) {
    .features-mvn-container {
      flex-direction: column;
    }
    
    .shopify-app-block[data-block-type="shopify://apps/mvn-waveviz/blocks/waveviz"] {
      max-width: 100%;
    }
  }

  .shopify-app-block[data-block-type="shopify://apps/mvn-waveviz/blocks/waveviz"]::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 20%, rgba(255, 59, 47, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 70% 80%, rgba(255, 127, 50, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 20% 80%, rgba(122, 60, 255, 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  .shopify-app-block[data-block-type="shopify://apps/mvn-waveviz/blocks/waveviz"] > * {
    position: relative;
    z-index: 1;
  }

  /* Override page-width constraint */
  .page-width {
    max-width: 100% !important;
    width: 100% !important;
  }
{%- endstyle -%}

<div class="product-page">
  <!-- Hero Section -->
  <section class="hero-section">
    <!-- Left: Product Image -->
    <div>
      {% if product.featured_image %}
        <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title | escape }}" class="product-image" />
      {% else %}
        <div class="product-image" style="background: #374151; height: 400px; display: flex; align-items: center; justify-content: center; color: #9ca3af;">
          No Image
                </div>
  {% endif %}
                </div>
    
    <!-- Right: Product Info -->
    <div class="product-info">
        <nav class="breadcrumb-nav">
          <a href="/" class="breadcrumb-link">Home</a>
          <span class="breadcrumb-separator">/</span>
          <a href="/#shop" class="breadcrumb-link">Sample Packs</a>
          <span class="breadcrumb-separator">/</span>
          <span class="breadcrumb-current">{{ product.title | escape }}</span>
        </nav>
      
      <h1 class="product-title">{{ product.title | escape }}</h1>
      
      <div class="pro-crafted">
        <span class="pro-crafted-text">Pro Crafted</span>
                  </div>
      
      <div class="product-price">
        {%- render 'price', product: product, price_class: 'price--large' -%}
                  </div>
      
      <form action="/cart/add" method="post" enctype="multipart/form-data" id="product-form">
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" />
        <button type="button" class="add-to-cart-btn" onclick="addToCartAndOpenDrawer(document.getElementById('product-form'), {{ product.selected_or_first_available_variant.id }})">
          Add to Cart
                      </button>
      </form>
      
      {% if product.description != blank %}
        <p class="product-description">{{ product.description }}</p>
                        {% endif %}
      
      <!-- Features and MVN Container -->
      <div class="features-mvn-container">
        <!-- Features Dropdown -->
        <div class="features-dropdown">
          <div class="features-header" onclick="toggleFeatures()">
            <h2 class="features-title">What Does the Pack Include?</h2>
            <span class="features-toggle" id="featuresToggle">â–¼</span>
                          </div>
          <div class="features-content" id="featuresContent">
            <ul class="features-list">
              <li>100+ Vocal Phrases</li>
              <li>Vocal Chops for instant groove</li>
              <li>Shouts & one-shots for drops</li>
              <li>Syllables for layering and FX</li>
              <li>High-quality WAV files</li>
              <li>Ready-to-use in any DAW</li>
            </ul>
                          </div>
                  </div>
                  </div>
      </div>
  </section>


<script type="application/ld+json">
  {{ product | structured_data }}
      </script>

<script>
  function toggleFeatures() {
    const content = document.getElementById('featuresContent');
    const toggle = document.getElementById('featuresToggle');
    
    if (content.classList.contains('open')) {
      content.classList.remove('open');
      toggle.classList.remove('open');
    } else {
      content.classList.add('open');
      toggle.classList.add('open');
    }
  }
    </script>
