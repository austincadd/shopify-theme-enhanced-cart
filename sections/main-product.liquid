<product-info
  id="MainProduct-{{ section.id }}"
  class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}"
  data-section="{{ section.id }}"
  data-product-id="{{ product.id }}"
  data-update-url="true"
  data-url="{{ product.url }}"
  {% if section.settings.image_zoom == 'hover' %}
    data-zoom-on-hover
  {% endif %}
>
  {{ 'section-main-product.css' | asset_url | stylesheet_tag }}
  {{ 'component-accordion.css' | asset_url | stylesheet_tag }}
  {{ 'component-price.css' | asset_url | stylesheet_tag }}
  {{ 'component-slider.css' | asset_url | stylesheet_tag }}
  {{ 'component-rating.css' | asset_url | stylesheet_tag }}
  {{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}

  {% unless product.has_only_default_variant %}
    {{ 'component-product-variant-picker.css' | asset_url | stylesheet_tag }}
    {{ 'component-swatch-input.css' | asset_url | stylesheet_tag }}
    {{ 'component-swatch.css' | asset_url | stylesheet_tag }}
  {% endunless %}
  {%- if product.quantity_price_breaks_configured? -%}
    {{ 'component-volume-pricing.css' | asset_url | stylesheet_tag }}
  {%- endif -%}

  {%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

  /* Product Page Styles */
  .product-page {
    background: #0a0a0a;
    color: white;
    font-family: 'Inter', sans-serif;
    padding: 4rem 4rem 6rem 4rem;
  }

  /* Hero Section */
  .hero-section {
    max-width: 1400px;
    margin: 0 auto;
    padding: 3rem 5.5rem;
    display: grid;
    grid-template-columns: 1.3fr 1.7fr;
    gap: 5rem;
    align-items: start;
    margin-top: 0;
  }

  @media (max-width: 768px) {
    .hero-section {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 2rem 3.5rem;
    }
    
    .product-image-container {
      position: static;
      top: auto;
      align-self: auto;
    }
    
    .features-section {
      justify-content: center;
      padding: 2rem 3.5rem;
    }
    
    .features-dropdown {
      max-width: 100%;
    }
    
  }

  .product-image {
      border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    width: 100%;
    height: auto;
  }

  .product-image-container {
    position: sticky;
    top: 100px;
    align-self: start;
    height: fit-content;
  }

  .product-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .breadcrumb-nav {
    display: flex;
    align-items: center;
    gap: 0.5rem;
      margin-bottom: 0.5rem;
  }

  .breadcrumb-link {
    color: #ffffff;
    text-decoration: none;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    text-shadow: 0 0 8px rgba(255, 45, 149, 0.4), 0 0 16px rgba(0, 212, 255, 0.2);
  }

  .breadcrumb-link:hover {
    background: linear-gradient(135deg, #ff2d95, #00d4ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    transform: scale(1.05);
    text-shadow: 0 0 12px rgba(255, 45, 149, 0.6), 0 0 24px rgba(0, 212, 255, 0.4);
  }

  .breadcrumb-separator {
    color: #ffffff;
    font-size: 1.1rem;
    text-shadow: 0 0 8px rgba(255, 45, 149, 0.4), 0 0 16px rgba(0, 212, 255, 0.2);
  }

  .breadcrumb-current {
    color: #ffffff;
    font-size: 1.1rem;
    font-weight: 500;
    text-shadow: 0 0 8px rgba(255, 45, 149, 0.4), 0 0 16px rgba(0, 212, 255, 0.2);
  }

  .product-title {
    font-size: 3rem;
      font-weight: 700;
    line-height: 1.1;
    color: #ffffff;
    text-shadow: 0 0 10px rgba(255, 45, 149, 0.5), 0 0 20px rgba(0, 212, 255, 0.3);
  }

  .pro-crafted {
    margin-bottom: 0.5rem;
  }

  .pro-crafted-text {
    background: linear-gradient(135deg, #ff2d95, #00d4ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
      font-size: 0.9rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

  .product-price {
    font-size: 1.5rem;
    color: #ffffff;
      font-weight: 600;
    text-shadow: 0 0 10px rgba(255, 45, 149, 0.5), 0 0 20px rgba(0, 212, 255, 0.3);
  }
  
  .product-price * {
    color: #ffffff;
    text-shadow: 0 0 10px rgba(255, 45, 149, 0.5), 0 0 20px rgba(0, 212, 255, 0.3);
  }
  
  .product-price .price__regular .visually-hidden {
    display: none;
  }
  
  .product-price .price__regular .price-item--regular {
    display: inline;
  }

  .add-to-cart-btn {
    background: linear-gradient(135deg, #ff2d95, #00d4ff);
    color: #ffffff;
    padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-weight: 600;
    border: none;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    width: fit-content;
    box-shadow: 0 4px 15px rgba(255, 45, 149, 0.3);
    position: relative;
    overflow: hidden;
  }

  .add-to-cart-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.6s ease;
  }

  .add-to-cart-btn:hover {
    transform: scale(1.08) translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 45, 149, 0.5), 0 0 30px rgba(0, 212, 255, 0.3);
    background: linear-gradient(135deg, #ff1a7a, #00b8e6);
  }

  .add-to-cart-btn:hover::before {
    left: 100%;
  }

  .add-to-cart-btn:active {
    transform: scale(1.02) translateY(0);
    transition: all 0.1s ease;
  }

  .product-description {
    color: #d1d5db;
      line-height: 1.6;
    margin-bottom: 0;
    padding-bottom: 0;
  }


  .features-dropdown {
    background: transparent;
    border-radius: 0;
    border: none;
    overflow: hidden;
    max-width: 100%;
    width: 100%;
    margin-top: 0;
    position: relative;
  }

  .features-dropdown:first-child::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, 
      transparent 0%, 
      rgba(255, 45, 149, 0.2) 15%, 
      rgba(255, 45, 149, 0.4) 30%, 
      rgba(255, 45, 149, 0.6) 50%, 
      rgba(255, 45, 149, 0.4) 70%, 
      rgba(255, 45, 149, 0.2) 85%, 
      transparent 100%
    );
  }

  .features-dropdown:last-child::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, 
      transparent 0%, 
      rgba(0, 212, 255, 0.2) 15%, 
      rgba(0, 212, 255, 0.4) 30%, 
      rgba(0, 212, 255, 0.6) 50%, 
      rgba(0, 212, 255, 0.4) 70%, 
      rgba(0, 212, 255, 0.2) 85%, 
      transparent 100%
    );
  }

  .middle-separator {
    height: 1px !important;
    background: linear-gradient(90deg, 
      transparent 0%, 
      rgba(122, 60, 255, 0.2) 15%, 
      rgba(122, 60, 255, 0.4) 30%, 
      rgba(122, 60, 255, 0.6) 50%, 
      rgba(158, 75, 255, 0.6) 50%, 
      rgba(158, 75, 255, 0.4) 70%, 
      rgba(158, 75, 255, 0.2) 85%, 
      transparent 100%
    ) !important;
    margin: 0.75rem 0 !important;
    width: 100% !important;
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
    position: relative !important;
    z-index: 10 !important;
  }

  .features-header {
    padding: 1rem 0.75rem;
    cursor: pointer;
      display: flex;
    justify-content: space-between;
      align-items: center;
    transition: all 0.3s ease;
    background: transparent;
    border: none;
    outline: none;
    box-shadow: none;
    position: relative;
  }

  .features-header::before,
  .features-header::after {
    display: none !important;
    content: none !important;
  }

  .features-header:hover {
    background: transparent;
    transform: none;
  }

  .features-title {
    font-size: 2rem !important;
    font-weight: 600 !important;
    margin: 0 !important;
    line-height: 1 !important;
    color: #ffffff !important;
    text-shadow: none !important;
    border: none !important;
    outline: none !important;
    box-shadow: none !important;
    background: none !important;
    filter: none !important;
    position: relative;
  }

  .features-title::before,
  .features-title::after {
    display: none !important;
    content: none !important;
  }

  .features-title * {
    text-shadow: none !important;
    box-shadow: none !important;
    filter: none !important;
  }

  .features-toggle {
    font-size: 1.2rem;
    color: #ffffff;
      transition: all 0.3s ease;
    text-shadow: 0 0 8px rgba(255, 45, 149, 0.4), 0 0 16px rgba(0, 212, 255, 0.2);
  }

  .features-toggle.open {
    transform: rotate(180deg);
    color: #ff2d95;
  }

  .features-content {
    max-height: 0;
      overflow: hidden;
    transition: max-height 0.3s ease;
    background: transparent;
  }

  .features-content.open {
    max-height: 300px;
  }

  .features-list {
    list-style: none;
    color: #ffffff;
    line-height: 1.6;
    padding: 1rem 0.75rem;
    margin: 0;
    font-size: 1.1rem;
  }

  .features-list li {
      margin-bottom: 0.5rem;
    position: relative;
    padding-left: 1.5rem;
    text-shadow: 0 0 8px rgba(255, 45, 149, 0.3), 0 0 16px rgba(0, 212, 255, 0.2);
  }

  .features-list li::before {
    content: '▶';
    position: absolute;
    left: 0;
    color: #ff2d95;
    font-size: 0.8rem;
    text-shadow: 0 0 8px rgba(255, 45, 149, 0.6);
  }




