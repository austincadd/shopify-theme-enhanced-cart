  .enhanced-cart-item {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    margin-bottom: 1rem;
    background: rgba(13, 15, 13, 0.6);
    border-radius: 12px;
    border: 1px solid rgba(102, 255, 204, 0.1);
