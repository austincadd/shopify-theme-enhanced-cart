    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 255, 204, 0.1);
  }

  .enhanced-cart-item__image {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 8px;
    flex-shrink: 0;
