  .enhanced-cart-drawer__header {
    padding: 1.5rem;
    border-bottom: 1px solid rgba(102, 255, 204, 0.2);
    background: rgba(13, 15, 13, 0.8);
    backdrop-filter: blur(20px);
    position: sticky;
    top: 0;
    z-index: 10;
