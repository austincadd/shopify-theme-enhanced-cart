  .enhanced-cart-drawer__close {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    background: none;
    border: none;
    color: var(--text-primary);
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 50%;
    transition: all 0.3s ease;
  }

  .enhanced-cart-drawer__close:hover {
    background: rgba(102, 255, 204, 0.1);
