<script>
let currentSlide = 0;
const totalSlides = 6; // 6 individual reviews
let isAnimating = false;

function showReviews(slideIndex, direction = 'right') {
  if (isAnimating) return;
  isAnimating = true;
  
  const cards = document.querySelectorAll('.review-card');
  
  // Hide all cards with animation
  cards.forEach((card, index) => {
    card.classList.remove('active', 'slide-in-left', 'slide-in-right');
    card.classList.add('hidden');
    card.style.display = 'none';
    card.style.visibility = 'hidden';
  });
  
  // Show the single card for this slide with animation
  if (cards[slideIndex]) {
    cards[slideIndex].classList.remove('hidden');
    cards[slideIndex].style.display = 'flex';
    cards[slideIndex].style.visibility = 'visible';
    
    // Add direction class for animation
    if (direction === 'left') {
      cards[slideIndex].classList.add('slide-in-left');
    } else {
      cards[slideIndex].classList.add('slide-in-right');
    }
    
    // Small delay to ensure the card is visible before adding active class
    setTimeout(() => {
      cards[slideIndex].classList.add('active');
      isAnimating = false;
    }, 10);
  }
  
  console.log('Showing slide:', slideIndex, 'Total cards:', cards.length);
}

function nextReviews() {
  console.log('Next clicked, current slide:', currentSlide);
  currentSlide = (currentSlide + 1) % totalSlides;
  console.log('New slide:', currentSlide);
  showReviews(currentSlide, 'right');
}

function previousReviews() {
  console.log('Previous clicked, current slide:', currentSlide);
  currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
  console.log('New slide:', currentSlide);
  showReviews(currentSlide, 'left');
}

document.addEventListener('DOMContentLoaded', function() {
  // Initialize with first slide
  showReviews(0);
  
  
  // Animate review cards on scroll
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate-in');
      }
    });
  }, {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  });

  document.querySelectorAll('.review-card').forEach(card => {
    observer.observe(card);
  });
});
</script>

