<style>
/* Featured Packs Section Styling */
.featured-packs-section {
  background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #0a0a0a 100%);
  padding: 0 0 4rem 0;
  position: relative;
  overflow: hidden;
}

/* Animated Background Elements */
.featured-packs-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 80%, rgba(102, 255, 204, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 45, 149, 0.1) 0%, transparent 50%);
  animation: backgroundPulse 8s ease-in-out infinite;
  z-index: 1;
}

@keyframes backgroundPulse {
  0%, 100% { opacity: 0.3; }
  50% { opacity: 0.6; }
}

/* Pack Card Hover Effects */
.pack-card::before {
  content: '';
  position: absolute;
  top: -1px;
  left: -1px;
  right: -1px;
  bottom: -1px;
  border-radius: 15px;
  background: linear-gradient(135deg, rgba(75, 0, 130, 0.4), rgba(138, 43, 226, 0.4), rgba(72, 61, 139, 0.4), rgba(106, 90, 205, 0.4), rgba(123, 104, 238, 0.4));
  opacity: 0;
  transition: all 0.4s ease;
  z-index: -1;
}

.pack-card:hover::before {
  opacity: 1;
  animation: pack-glow-pulse 2s ease-in-out infinite;
}

.pack-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 40px rgba(138, 43, 226, 0.3);
  background: rgba(255, 255, 255, 0.05);
}

@keyframes pack-glow-pulse {
  0%, 100% {
    box-shadow: 0 0 15px rgba(138, 43, 226, 0.3);
  }
  50% {
    box-shadow: 0 0 20px rgba(138, 43, 226, 0.4), 0 0 25px rgba(75, 0, 130, 0.2);
  }
}

.pack-card:hover .pack-image {
  transform: scale(1.05);
  opacity: 0.8;
}

.pack-image {
  transition: all 0.3s ease;
}

/* Buy Button Hover Effects */
.buy-btn:hover {
  background: rgba(255, 255, 255, 0.2) !important;
  border-color: rgba(255, 255, 255, 0.4) !important;
  transform: translateY(-2px);
  box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
}

/* Wav Form Styling */
.wav-form-container {
  transition: all 0.3s ease;
}

.wav-form-container:hover {
  background: rgba(0, 0, 0, 0.4) !important;
  border-color: rgba(255, 255, 255, 0.2) !important;
}

.wav-form {
  transition: all 0.3s ease;
  position: relative;
}

.wav-form:hover {
  transform: scale(1.02);
  box-shadow: 0 4px 15px rgba(255, 45, 149, 0.3);
}

.wav-placeholder {
  transition: opacity 0.3s ease;
}

.wav-form:hover .wav-placeholder {
  opacity: 0.5;
}

/* AWPlayer Wavform Styling */
.awp-wavform-container {
  position: relative;
}

.awp-wavform {
  width: 100% !important;
  height: 60px !important;
  background: transparent !important;
  border: none !important;
  border-radius: 4px !important;
}

.awp-wavform canvas {
  width: 100% !important;
  height: 100% !important;
  border-radius: 4px !important;
}

.awp-wavform-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.awp-wavform:not(:empty) .awp-wavform-placeholder {
  display: none !important;
}

/* Button Shine Effect */
.btn-shine {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.play-demo-btn:hover .btn-shine {
  left: 100%;
}

.play-demo-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(255, 45, 149, 0.4);
}

.play-demo-btn:active {
  transform: translateY(0);
}

/* Audio Controls Styling */
audio {
  filter: invert(1) hue-rotate(180deg);
}

audio::-webkit-media-controls-panel {
  background-color: rgba(102, 255, 204, 0.1);
}

/* Responsive Design */
@media screen and (max-width: 768px) {
  .packs-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .packs-title {
    font-size: 2rem !important;
  }
  
  .pack-card {
    padding: 1rem !important;
  }
}

/* Loading State */
.pack-card.loading .play-demo-btn {
  opacity: 0.7;
  pointer-events: none;
}

.pack-card.loading .btn-text::after {
  content: '...';
  animation: loadingDots 1s infinite;
}

@keyframes loadingDots {
  0%, 20% { content: '.'; }
  40% { content: '..'; }
  60%, 100% { content: '...'; }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const playButtons = document.querySelectorAll('.play-demo-btn');
  const buyButtons = document.querySelectorAll('.buy-btn');
  
  // Play Demo button functionality (now handled by AWPlayer)
  playButtons.forEach(button => {
