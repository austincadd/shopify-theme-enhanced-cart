<style>
/* Featured Packs Section Styling */
.featured-packs-section {
  background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #0a0a0a 100%);
  padding: 0 0 4rem 0;
  position: relative;
  overflow: hidden;
}

/* Animated Background Elements */
.featured-packs-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 80%, rgba(102, 255, 204, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 45, 149, 0.1) 0%, transparent 50%);
  animation: backgroundPulse 8s ease-in-out infinite;
  z-index: 1;
}

@keyframes backgroundPulse {
  0%, 100% { opacity: 0.3; }
  50% { opacity: 0.6; }
}

/* Pack Card Hover Effects */
.pack-card:hover {
  transform: translateY(-8px);
  border-color: rgba(102, 255, 204, 0.4);
  box-shadow: 0 20px 40px rgba(102, 255, 204, 0.2), 0 0 20px rgba(255, 45, 149, 0.1);
}

.pack-card:hover .pack-image {
  transform: scale(1.05);
}

.pack-image {
  transition: transform 0.3s ease;
}

/* Button Shine Effect */
.btn-shine {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.play-demo-btn:hover .btn-shine {
  left: 100%;
}

.play-demo-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(255, 45, 149, 0.4);
}

.play-demo-btn:active {
  transform: translateY(0);
}

/* Audio Controls Styling */
audio {
  filter: invert(1) hue-rotate(180deg);
}

audio::-webkit-media-controls-panel {
  background-color: rgba(102, 255, 204, 0.1);
}

/* Responsive Design */
@media screen and (max-width: 768px) {
  .packs-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .packs-title {
    font-size: 2rem !important;
  }
  
  .pack-card {
    padding: 1rem !important;
  }
}

/* Loading State */
.pack-card.loading .play-demo-btn {
  opacity: 0.7;
  pointer-events: none;
}

.pack-card.loading .btn-text::after {
  content: '...';
  animation: loadingDots 1s infinite;
}

@keyframes loadingDots {
  0%, 20% { content: '.'; }
  40% { content: '..'; }
  60%, 100% { content: '...'; }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const playButtons = document.querySelectorAll('.play-demo-btn');
  const audioElements = document.querySelectorAll('audio');
  
  // Track currently playing audio
  let currentAudio = null;
  
  playButtons.forEach(button => {
    button.addEventListener('click', function() {
      const packName = this.getAttribute('data-pack');
      const audio = document.getElementById(`audio-${packName}`);
      const card = this.closest('.pack-card');
      
      // Pause any currently playing audio
      if (currentAudio && currentAudio !== audio) {
        currentAudio.pause();
        const otherButton = currentAudio.closest('.pack-card').querySelector('.play-demo-btn');
        otherButton.querySelector('.btn-text').textContent = 'Play Demo';
        otherButton.classList.remove('playing');
      }
      
      if (audio.paused) {
        audio.play().then(() => {
          this.querySelector('.btn-text').textContent = 'Pause Demo';
          this.classList.add('playing');
          currentAudio = audio;
        }).catch(error => {
          console.error('Error playing audio:', error);
        });
      } else {
        audio.pause();
        this.querySelector('.btn-text').textContent = 'Play Demo';
        this.classList.remove('playing');
        currentAudio = null;
      }
    });
  });
  
  // Handle audio end events
  audioElements.forEach(audio => {
    audio.addEventListener('ended', function() {
      const packName = this.id.replace('audio-', '');
      const button = document.querySelector(`[data-pack="${packName}"]`);
      button.querySelector('.btn-text').textContent = 'Play Demo';
      button.classList.remove('playing');
      currentAudio = null;
    });
  });
});

// Staggered animation for pack cards
function initPackAnimation() {
  console.log('Featured packs animation script loaded');
  
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -100px 0px'
  };

  const packObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        console.log('Featured packs section is in view, starting animation');
        const cards = entry.target.querySelectorAll('.pack-card');
        console.log('Found pack cards:', cards.length);
        
        // Cards are already in initial state from HTML
        
        cards.forEach((card, index) => {
          console.log(`Animating pack card ${index + 1}`);
          setTimeout(() => {
            card.classList.add('animate-in');
            console.log(`Pack card ${index + 1} animated`);
          }, index * 150); // 150ms delay between each card
        });
        packObserver.unobserve(entry.target); // Only animate once
      }
    });
  }, observerOptions);

  // Observe the featured packs section
  const featuredPacksSection = document.querySelector('.featured-packs-section');
  console.log('Featured packs section found:', !!featuredPacksSection);
  
  if (featuredPacksSection) {
    packObserver.observe(featuredPacksSection);
    console.log('Pack observer attached to section');
  } else {
    // Fallback: try to find the section by ID
    const sectionById = document.querySelector('#featured-packs');
    if (sectionById) {
      packObserver.observe(sectionById);
      console.log('Pack observer attached to section by ID');
    }
  }
}

// Run when DOM is ready
if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', initPackAnimation);
} else {
  initPackAnimation();
}
</script>

